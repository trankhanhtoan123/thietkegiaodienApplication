<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChoiMoi2Activity">


    <TextView
        android:id="@+id/tvcauhoi"
        android:layout_width="380dp"
        android:layout_height="223dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="164dp"
        android:layout_height="113dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcauhoi"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="ĐIỂM :"
                android:textSize="8pt" />

            <TextView

                android:id="@+id/tvdiem"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="20"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="111dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:text="lƯỢT CHƠI :"
                android:textSize="8pt" />

            <TextView

                android:id="@+id/tvluotchoi"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="20"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="CÂU HỎI :"
                android:textSize="8pt" />

            <TextView

                android:id="@+id/tvslcauhoi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="20"
                android:textSize="8pt" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="77dp"
        android:layout_height="17dp"
        android:gravity="center"
        android:text="THỜI GIAN :"
        android:textSize="6pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvcauhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvtime"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tvcauhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="48dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="LEVER"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvcauhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toEndOf="@+id/tvtime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvlever"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvcauhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btna"
        android:layout_width="169dp"
        android:layout_height="82dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvcauhoi"
        app:layout_constraintVertical_bias="0.481" />

    <Button
        android:id="@+id/btnb"
        android:layout_width="169dp"
        android:layout_height="82dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toEndOf="@+id/btna"
        app:layout_constraintTop_toBottomOf="@+id/tvcauhoi"
        app:layout_constraintVertical_bias="0.48"
        android:textAllCaps="false"
        />

    <Button
        android:textAllCaps="false"

        android:id="@+id/btnc"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btna"
        app:layout_constraintVertical_bias="0.353" />

    <Button
        android:id="@+id/btnd"
        android:layout_width="169dp"
        android:layout_height="85dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toEndOf="@+id/btnc"
        app:layout_constraintTop_toBottomOf="@+id/btnb"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="UnknownId"         android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>