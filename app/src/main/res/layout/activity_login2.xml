<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vango"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:text="Đăng Nhập"
        android:textColor="#4E2C22"
        android:textSize="20pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <TextView

        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:text="Tên nhân vật:"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <TextView

        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:text="Pass:"
        android:textSize="10pt"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.096" />

    <TextView

        android:id="@+id/tvname"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:text="TextView"
        android:textColor="#502D21"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/edtpass1"
        android:layout_width="209dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="pass... ???"
        android:inputType="textPassword"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tvname"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:textStyle="bold"
        android:id="@+id/btnthoat"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:text="Thoát"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/btndangnhap1"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:text="Đăng Nhập Ngay"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toEndOf="@+id/btnthoat"
        app:layout_constraintTop_toBottomOf="@+id/edtpass1"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>