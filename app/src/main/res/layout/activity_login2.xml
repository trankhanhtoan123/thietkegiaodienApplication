<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vango"
    android:orientation="vertical">

    <TextView

        android:id="@+id/textView2"
        android:layout_width="235dp"
        android:layout_height="88dp"
        android:fontFamily="@font/font"
        android:text="Đăng Nhập"
        android:textColor="#4E2C22"
        android:textSize="25pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:fontFamily="@font/font"
        android:text="Tên nhân vật:"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <TextView
        android:id="@+id/textView5"

        android:layout_width="96dp"
        android:layout_height="39dp"
        android:fontFamily="@font/font"
        android:text="Pass:"
        android:textSize="15pt"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/tvname"

        android:layout_width="217dp"
        android:layout_height="46dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#502D21"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.125" />

    <EditText
        android:id="@+id/edtpass1"
        android:layout_width="212dp"
        android:layout_height="49dp"
        android:ems="10"
        android:fontFamily="@font/font"
        android:hint="pass... ???"
        android:inputType="textPassword"
        android:paddingLeft="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tvname"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/btnthoat"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/font"
        android:text="Thoát"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/btndangnhap1"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/font"
        android:text="Đăng Nhập Ngay"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnthoat"
        app:layout_constraintTop_toBottomOf="@+id/edtpass1"
        app:layout_constraintVertical_bias="0.089" />
</androidx.constraintlayout.widget.ConstraintLayout>